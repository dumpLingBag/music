/* pages/account/account.wxss */
.user-info{
  background-color: #fff;
  padding: 15px 15px 10px;
  overflow: hidden;
  position: relative;
}
.user-img{
  width: 128rpx;
  height: 128rpx;
  margin: 0 auto;
}
.userinfo-avatar{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.lv-btn{
  font-weight: bold;
  background-color: transparent;
  letter-spacing: 3px;
  padding: 0 0 0 3px;
}
.lv-btn::after{
  border: none;
}
.user-sign{
  background-color: rgba(0, 0, 0, .1);
  font-size: 13px;
  padding: 2px 5px;
  color: rgba(0, 0, 0, .5);
  position: absolute;
  top: 10px;
  right: 20px;
}
.user-sign>text{
  margin: 0 2px;
  display:block;
  float:right;
  margin-top:1px;
}
.user-index{
  overflow: hidden;
  padding-top: 10px;
}
.user-index>view{
  float: left;
  width: 25%;
  text-align: center;
}
.user-index .icon-text{
  display: block;
  font-size: 12px;
}

/* 账户中心下部 */
.user-list{
  margin-top: 12px;
}
.list-icon{
  font-size: 20px;
}
